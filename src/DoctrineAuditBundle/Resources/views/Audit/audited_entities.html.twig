{% extends "@DHDoctrineAudit/layout.html.twig" %}

{% block with_alex_doctrine_audit_content %}
    <h1>Audits ({{ audited|length }} entities)</h1>

    <table>
        <thead>
            <th>Class</th>
            <th>Table</th>
        </thead>
        <tbody>
        {% for entity, table in audited %}
            <tr>
                <td>{{ entity|escape }}</td>
                <td>
                    <a href="{{ path('with_alex_doctrine_audit_show_entity_history', { 'entity': entity }) }}">{{ table }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock with_alex_doctrine_audit_content %}
